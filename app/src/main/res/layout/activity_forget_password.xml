<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >



    <TextView
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_gravity="center"
        style="@style/text_20"
        android:text="Forgot Password"
        android:textStyle="bold"
        android:textSize="@dimen/_30sdp"
        android:textColor="#1E41BB"
        android:fontFamily="sans-serif-black"

        />


    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:textAlignment="center"
        style="@style/text_20"
        android:text="No worry ! \nyou can change your Password"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="sans-serif-black"

        />





    <EditText
        android:id="@+id/forgetpass_email"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/custom_border"
        android:drawablePadding="@dimen/_10sdp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="20dp"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


    <EditText
        android:id="@+id/forgetpass_newpassword"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/custom_border"
        android:drawablePadding="@dimen/_10sdp"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:hint="New Password "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <EditText
        android:id="@+id/forgetpass_confirm_newpassword"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/custom_border"
        android:drawablePadding="@dimen/_10sdp"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:hint="Confirm New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />



    <Button
        android:id="@+id/forgetpass_submit"
        app:backgroundTint="@null"
        android:background="@drawable/custom_button"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Submit"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />







</LinearLayout>